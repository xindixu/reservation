{
    "env": {
        "browser": true,
        "es2020": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "jsx-a11y",
        "import",
        "react",
        "react-hooks",
        "prettier"
    ],
    "rules": {
        "max-len": ["error", { "code": 80 }],
        "no-console": 0,
        "no-alert": 0,
        "semi": ["error", "never"]
    }
}
